{
    "tasks": [
        {
            "type": "cppbuild",
            "label": "C/C++: g++ build active file",
            "command": "/usr/bin/g++",
            "args": [
                "-std=c++17",
                "-g",
                " ${workspaceFolder}/*.cpp",
                " ${workspaceFolder}/src/*.cpp",

                "-o",
                "${fileDirname}/${fileBasenameNoExtension}",
                 "-lmysqlclient",
                 "-lmysqlcppconn",
                 "-I/usr/include/python3.8/",
                 "-lpython3.8",
                 "-ljsoncpp",
                //  "-lPY_SSIZE_T_CLEAN"
            ],
            "options": {
                // "cwd": "${fileDirname}"
                "cwd": "/usr/bin"
            },
            "problemMatcher": [
                "$gcc"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "detail": "Task generated by Debugger."
        }
    ],
    "version": "2.0.0"
}